    // Alice (admin) can remove Bob
    try state_machine.proposeRemove(0, 1);
    _ = try state_machine.commitProposals(0, &mls_provider);
    
    // Verify final state
    try std.testing.expectEqual(@as(usize, 2), state_machine.getMemberCount());
    
